<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ghibli Movies</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
     <div class="wrapper">
      <h1 style="color:aliceblue">CRUD App</h1>
        <br><br><br>
        <div class="ui container">
          <form action="/add" class="ui form" method ="POST">
            <div class="ui three fields">
              <div class="field">
                <label for="name" class="ui header black" style="color:aliceblue">Enter the movie name</label>
                <input type="text" name="name">
              </div>
              <div class="field">
                <label for="director" class="ui header black" style="color:aliceblue">Enter the director name</label>
                <input type="text" name="director">
              </div>
              <div class="field">
                <label for="year" class="ui header black" style="color:aliceblue">Enter the year</label>
                <input type="text" name="year">
              </div>
            </div>
            <div class="ui fluid field">
              <input type="submit" value="Submit" class="ui button green fluid">
            </div>
          </form> 

          <br><br>
          <table class="ui table">
            <thead>
              <tr>
              <th>Movie Name</th>
              <th>Director</th>
              <th>Year</th>
              <th>Edit</th>
              <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              
              <% clubs.forEach(function(club){ %>
                <tr> 
                  <td><%- club.name %></td>
                  <td><%- club.director %></td>
                  <td><%- club.year %></td>
                  <td><a class="ui white button" href="/edit/<%= club._id %>"><i class="edit outline icon"></i></a></td>
                  <td><a class="ui white button" href="/delete/<%= club._id %>"><i class="eraser icon"></i></a></td>
                </tr>
                
              <% }); %>
              
            </tbody>
          </table>
        </div>
    </div>
    <script src="/public/js/semantic.min.js"></script>
</body>
</html>